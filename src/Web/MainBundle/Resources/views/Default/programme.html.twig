{% extends 'MainBundle::layout.html.twig' %}

{% block meta %}
    <meta name = "{% trans from 'about' %} about.block14 {% endtrans %}" >
    <meta name = "keywords" content = "{% trans from 'about' %} about.block15 {% endtrans %}" >
    <meta charset="utf-8">

{% endblock %}
{% block title %}
    {% trans from 'about' %} about.title {% endtrans %}
{% endblock  %}

{% block mycss %}
    {{ parent() }}


{% endblock %}
{% block header %}
    {% include 'MainBundle:Inc:horizontal-nav.html.twig' %}

{% endblock %}

{% block  mainLg %}
    <div class="bagroun_admission">
        <div class="firstbar ">
            <div class="espace">
                <div id="mains" class="margin_top">
                    <ul>
                        <li class="drop"><a href="#home">{% trans from 'admission' %} admission.Navbar {% endtrans %}</a></li>
                        <li>
                            <a href="#">{% trans from 'admission' %} admission.admiss{% endtrans %} </a>
                        </li>
                        <li class="drop"><a href="#news">{% trans from 'admission' %} admission.preinscription {% endtrans %}</a></li>
                        <li class="dropdown">
                            <a href="javascript:void(0)" class="dropbtn">{% trans from 'admission' %} admission.cours {% endtrans %}</a>
                            <div class="dropdown-content">
                                <a href="#">Level 1</a>
                                <a href="#">Level 2</a>
                                <a href="#">Level 3</a>
                            </div>
                        </li>
                        <li class="drop"><a href="{{ path('main_programme') }}">{% trans from 'admission' %} admission.program {% endtrans %}</a></li>
                        <li><a href="#news">{% trans from 'admission' %} admission.campus {% endtrans %}</a></li>
                        <li><a href="#news">{% trans from 'admission' %} admission.etudiant {% endtrans %}</a></li>
                        <li><a href="#news">{% trans from 'admission' %} admission.diplom {% endtrans %}</a></li>
                        <li><a href="#news">{% trans from 'admission' %} admission.documentation {% endtrans %}</a></li>
                        <li><a href="#news">{% trans from 'admission' %} admission.entreprise {% endtrans %}</a></li>
                        <li><a href="#news">{% trans from 'admission' %} admission.contact {% endtrans %}</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="secondbar">
            <div  class="title_admission">
                <h3> {% trans from 'admission' %} admission.second_bartitle {% endtrans %}</h3>
            </div>
        </div>
        {# il  est possible de travailler directement  ici. si  vous voulez occuper toute la page dans la width #}
        <div class="bagroun_admission padding_admission_content">
            <div class="row">
                <div class="col-sm-8 ">
                    <img class="admission_image"  src="{{ asset('data/img/adm1.jpg') }}" alt="">
                    <div class="admission_content">
                        <p><h4 class="title_admission_content"> {% trans from 'admission' %} admission.content_title {% endtrans %}</h4></p>
                        <p><h5 class="title_admission_content2" > {% trans from 'admission' %} admission.content_title11 {% endtrans %}</h5></p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div id="main_programme">
                        <div class="row section admission">
                            <div class="inner padding">
                                <div class="flex">
                                    <div class="hexagon degrade admission-hexagon">
                                        <div class="triangle-top"></div>
                                        <div class="titre">ADMISSION AU</div>
                                        <h3>
                                            <i class="icon-fleche-droite grand"></i>
                                            <span class="adm-niv">Niveau 1</span>
                                            <i class="icon-fleche-gauche grand"></i></h3>
                                        <div class="content">
                                            {% trans from 'about' %} about.bac1 {% endtrans %}
                                        </div>
                                        <a class="myButton" href="javascript:;">PLUS D'INFO</a>
                                        <div class="triangle-bottom"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-8 ">
                </div>
            </div>
        </div>
    </div>

{% endblock %}

