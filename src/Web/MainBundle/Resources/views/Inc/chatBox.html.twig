<div id="drag-messageA" class="drag-message_body row">
    {% for i in 1..3 %}
        {% set parentId = 'chatcontent'~i %}
        <div class="col-sm-12 col-lg-4 col-md-2">
            {#popup-box-on#}
            <div class="popup-box chat-popup  chatcontent" id="{{ parentId }}">
                <div class="popup-head">
                    <div class="popup-head-left pull-left userCurrentProfile"> <span  class="userCurrentName"> Danick takam  </span>   <span class="text-muted small">Cameroun-Douala</span></div>
                    <div class="popup-head-right pull-right">
                        <div class="btn-group">
                            <button class="chat-header-button" data-toggle="dropdown" type="button" aria-expanded="false"> <i class="fa fa-cog"></i> </button>
                            <ul role="menu" class="dropdown-menu pull-right">
                                <li><a href="#">{% trans  from 'messages' %} message.profile {% endtrans %}</a></li>
                                <li><a href="#">{% trans  from 'messages' %} message.block {% endtrans %}</a></li>
                                <li><a href="#">{% trans  from 'messages' %} message.empty {% endtrans %}</a></li>
                                <li><a href="#">{% trans  from 'messages' %} message.photos {% endtrans %}</a></li>
                            </ul>
                        </div>
                        <button data-widget="remove"  class="chat-header-button pull-right close closeChat" type="button"><i class="fa fa-power-off"></i></button>
                    </div>
                </div>
                <div class="popup-messages">
                    {% for i in 1..9 %}
                        <div class="direct-chat-messages">
                            <div class="chat-box-single-line">
                                <abbr class="timestamp">1{{ i }}/08/2017</abbr>
                            </div>
                            <div class="direct-chat-msg doted-border">
                                <div class="direct-chat-info clearfix">
                                    <span class="direct-chat-name pull-left">Stratege</span>
                                </div>

                                <img alt="message user image" src="{{ asset('data/img/empty.png') }}" class="direct-chat-img"><!-- /.direct-chat-img -->
                                <div class="direct-chat-text">
                                    {{ i }}) Je suis un simple message de test.  je serai cool
                                </div>
                                <div class="direct-chat-info clearfix">
                                    <span class="direct-chat-timestamp pull-right">1{{ i }}:30</span>
                                </div>
                                <div class="direct-chat-info clearfix">
                                <span class="direct-chat-img-reply-small pull-left">

                                </span>
                                    <span class="direct-chat-reply-name"></span>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="popup-messages-footer bg-faded">
                    <div class="status_message"  placeholder="type a message ..." contenteditable="true"></div>
                    <div class="btn-footer">
                        <button class="bg_none"><i class="fa fa-file-o"></i> </button>
                        <button class="bg_none"><i class="fa fa-camera"></i> </button>
                        <button class="bg_none"><i class="fa fa-smile-o"></i> </button>
                        <button class="bg_none pull-right btn-send"><i class="fa fa-send"></i> </button>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>